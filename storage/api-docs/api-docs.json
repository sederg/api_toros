    "paths": {
        "/game/newgame": {
            "post": {
                "tags": [
                    "Game"
                ],
                "summary": "Crear un nuevo Juego",
                "operationId": "7fa75fe8f72fac750469e90eb631f0dd",
                "parameters": [
                    {
                        "name": "usuario",
                        "in": "query",
                        "description": "Nombre del usuario del juego",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "Raul"
                    },
                    {
                        "name": "edad",
                        "in": "query",
                        "description": "edad del usuario del juego",
                        "required": true,
                        "schema": {
                            "type": "number"
                        },
                        "example": "15"
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Juego creado correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "rows": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id_juego": {
                                                        "type": "number",
                                                        "example": "1"
                                                    },
                                                    "inicio_juego": {
                                                        "type": "string",
                                                        "example": "2023-11-28T15:46:17.467752Z"
                                                    },
                                                    "tiempo_juego": {
                                                        "type": "number",
                                                        "example": "800"
                                                    },
                                                    "message": {
                                                        "type": "string",
                                                        "example": "Juego creado satisfactoriamente.Su id de juego es :8), El contador de juego comienza en 2023-11-28 15:46:17 y tiene un tiempo de 800 antes de perder la partida."
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Error de Valiacion",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "rows": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "status": {
                                                        "type": "string",
                                                        "example": "Error de validacion"
                                                    },
                                                    "error": {
                                                        "type": "string",
                                                        "example": "El campo X de ser..."
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
